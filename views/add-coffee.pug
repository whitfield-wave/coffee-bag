extends layout 

block main 
  div.add-coffee-form-wrapper
    form(action=action="/coffees/add/" method='post')
      div.add-coffee-form
        div.form-element
          label Coffee Name
            input(type="text" name="coffeeName")
        div.form-element
          label Roaster
            input(type="text" name="roasterName")
        div.form-element
          label Country
            input(type="text" name="countryOfOrigin")
        div.form-element
          label Region
            input(type="text" name="regionOfOrigin")
        div.form-element
          label Process
            input(type="text" name="process")
        div.form-element
          label Price per Bag 
            input(type="number" step="0.01" min="0" name="bagPrice")
        div.form-element
          label Description 
            textarea(name="description")
        div.form-element
          input(type="submit" value="Save Coffee")
