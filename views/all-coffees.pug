extends layout 

block main 
  form(action='/coffees/add' method='get')
    button.add Add a bag!

  br
  div.coffee-card-wrapper
    for coffee in coffees
      div.coffee-card
        a(href=`/coffees/${coffee.id}`)
          span #{coffee.name} 
        table
          tr
            th Roaster: 
            td #{coffee.roaster_name}
          tr
            th Country: 
            td #{coffee.country_of_origin}
          tr
            th Region:
            td #{coffee.region_of_origin}
          tr
            th Process: 
            td #{coffee.process}
          tr
            th Price/bag:
            td  $#{coffee.bag_price}
          tr
            th Your impression:
            td  #{coffee.description}
        p Added on #{coffee.date.toLocaleDateString()}


